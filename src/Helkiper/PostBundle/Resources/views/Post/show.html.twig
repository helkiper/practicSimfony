{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('post_index') }}">Back</a>

    <h1>{{ post.header }}</h1>
    <p>{{ post.content }}</p>
    <p>{{ post.createdAt | date('Y-m-d') }}</p>
    <hr />
    <h4>Comments:</h4>
    <ul>
        {% for comment in post.comments %}
            <li>{{ comment.content }}</li>
        {% endfor %}
    </ul>
{% endblock %}